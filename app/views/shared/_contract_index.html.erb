<% present(c) do |contract| %>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Lender: <%= contract.full_name("lender") %></li>
    <li class="list-group-item">Borrower: <%= contract.full_name("borrower") %></li>
    <li class="list-group-item">Amount: <%= contract.amount("request") %></li>
    <li class="list-group-item">Term: <%= contract.months("request") %></li>
    <li class="list-group-item">Rate: <%= contract.ir("request") %></li>
    <li class="list-group-item">Status: <%= contract.status %></li>
  </ul>
  <div class="panel-footer">
  </div>
<% end %>
